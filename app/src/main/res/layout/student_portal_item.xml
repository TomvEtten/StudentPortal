<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:padding="12dp">

    <Button
        android:id="@+id/tvPortalHiddenButton"
        android:layout_width="198dp"
        android:layout_height="159dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        android:background="#009688"
        android:textAlignment="center"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvPortalTitle"
        android:layout_width="138dp"
        android:layout_height="133dp"
        android:layout_alignStart="@+id/tvPortalHiddenButton"
        android:layout_alignTop="@+id/tvPortalHiddenButton"
        android:layout_alignEnd="@+id/tvPortalHiddenButton"
        android:layout_alignBottom="@+id/tvPortalHiddenButton"
        android:layout_marginStart="29dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="10dp"
        android:elevation="10dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

</RelativeLayout>